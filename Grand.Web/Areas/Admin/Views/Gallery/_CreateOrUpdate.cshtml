@model Grand.Web.Areas.Admin.Models.Catalog.GalleryModel

<div asp-validation-summary="All"></div>
<input asp-for="Id" type="hidden" />

<div class="form-horizontal">
    <div class="form-body">
        <div class="form-group">
            <admin-label asp-for="Name" />
            <div class="col-md-9 col-sm-9">
                <admin-input asp-for="Name" />
                <span asp-validation-for="Name"></span>
            </div>
        </div>
        <div class="form-group">
            <admin-label asp-for="Description" />
            <div class="col-md-9 col-sm-9">
                <admin-textarea asp-for="Description"></admin-textarea>
                <span asp-validation-for="Description"></span>
            </div>
        </div>
        <div class="form-group">
            <admin-label asp-for="GalleryTemplateId" />
            <div class="col-md-9 col-sm-9">
                <admin-select asp-for="GalleryTemplateId" asp-items="Model.AvailableGalleryTemplates" />
                <span asp-validation-for="GalleryTemplateId"></span>
            </div>
        </div>
        <div class="form-group">
            <admin-label asp-for="Published" />
            <div class="col-md-9 col-sm-9">
                <label class="mt-checkbox mt-checkbox-outline control control-checkbox">
                    <admin-input asp-for="Published" />
                    <div class="control__indicator"></div>
                </label>
                <span asp-validation-for="Published"></span>
            </div>
        </div>
        @if (Model.CreatedOnUtc.HasValue)
        {
            <div class="form-group">
                <admin-label asp-for="CreatedOnUtc" />
                <div class="col-md-9 col-sm-9">
                    <label class="control-label">@Model.CreatedOnUtc.Value.ToString("F")</label>
                </div>
            </div>
        }
        @if (Model.UpdatedOnUtc.HasValue)
        {
            <div class="form-group">
                <admin-label asp-for="UpdatedOnUtc" />
                <div class="col-md-9 col-sm-9">
                    <label class="control-label">@Model.UpdatedOnUtc.Value.ToString("F")</label>
                </div>
            </div>
        }
    </div>
</div>